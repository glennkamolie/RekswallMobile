<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/textIdBeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Beli"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User ID" />

    <TextView
        android:id="@+id/textTotalReksadanaLama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Reksadana Lama" />

    <TextView
        android:id="@+id/textBeliReksadana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beli Reksadana" />

    <TextView
        android:id="@+id/textTotalReksadanaBaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Reksadana Baru" />

    <TextView
        android:id="@+id/textTanggalTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal Transaksi" />

</LinearLayout>
