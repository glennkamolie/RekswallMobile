<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".mainmenu">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginVertical="10dp"
        android:text="MAIN MENU"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sell Reksadana" />

    <Button
        android:id="@+id/btnBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy Reksadana" />

    <Button
        android:id="@+id/btnbuyhistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy History" />

    <Button
        android:id="@+id/btnSellhistory"
        android:onClick="a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sell History" />

    <Button
        android:id="@+id/btnjumlahdana"
        android:onClick="a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jumlah Dana" />

</LinearLayout>